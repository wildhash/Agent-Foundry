# ===================================
# REQUIRED API KEYS
# ===================================
# Anthropic API key for Claude integration (REQUIRED)
ANTHROPIC_API_KEY=sk-ant-...

# ===================================
# LLM Configuration
# ===================================
LLM_MODEL=claude-sonnet-4-20250514

# ===================================
# OPTIONAL SPONSOR INTEGRATIONS
# ===================================
# These integrations will gracefully degrade if not provided
FASTINO_API_KEY=
FREEPIK_API_KEY=
FRONTEGG_API_KEY=
AIRIA_API_KEY=
RAINDROP_API_KEY=

# ===================================
# APPLICATION SETTINGS
# ===================================
APP_NAME=Agent Foundry
DEBUG=False
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================================
# DATABASE
# ===================================
# PostgreSQL (production)
DATABASE_URL=postgresql://agent:foundry123@localhost:5432/agentfoundry
# SQLite (development fallback)
# DATABASE_URL=sqlite:///./agent_foundry.db

# ===================================
# REDIS
# ===================================
REDIS_URL=redis://localhost:6379

# ===================================
# AGENT CONFIGURATION
# ===================================
MAX_REFLEXION_LOOPS=5
PERFORMANCE_THRESHOLD=0.75
EVOLUTION_THRESHOLD=0.85

# ===================================
# CODE EXECUTION SANDBOX
# ===================================
EXECUTION_TIMEOUT=30
EXECUTION_MEMORY=256m
EXECUTION_CPU_QUOTA=50000

# ===================================
# FASTINO TLM SETTINGS (99x faster inference)
# ===================================
FASTINO_INFERENCE_SPEED_MULTIPLIER=99
FASTINO_BATCH_SIZE=32
FASTINO_MAX_TOKENS=2048

# ===================================
# LIQUIDMETAL RAINDROP SETTINGS (self-healing code)
# ===================================
RAINDROP_AUTO_HEAL=True
RAINDROP_MAX_ATTEMPTS=3
RAINDROP_HEAL_TIMEOUT=30
